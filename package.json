{
  "name": "chatbot-socket-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"apps/*/src/**/*.{ts,tsx,js,jsx}\" \"packages/*/src/**/*.{ts,tsx,js,jsx}\" \"*.{ts,js,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"apps/*/src/**/*.{ts,tsx,js,jsx}\" \"packages/*/src/**/*.{ts,tsx,js,jsx}\" \"*.{ts,js,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-config-prettier": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "globals": "^15.0.0"
  }
}
